{namespace soy.examples.simple}

{template helloWorld}
  {msg desc="Says hello to the world."}
    Hello world!
  {/msg}
{/template}

{template helloName}
  {@param? name: string|null}
  {if $name}
    {msg desc="Says hello to a person."}
      Hello {$name}!
    {/msg}
  {else}
    {call helloWorld /}
  {/if}
{/template}

{template helloNames}
  {@param names: list<string>}
  {if $names.length != 0}
    {for $name, $nameIndex in $names}
      {call helloName}
        {param name: $name /}
      {/call}
      {if $nameIndex != $names.length - 1}
        <br>
      {/if}
    {/for}
  {else}
    {call helloWorld /}
  {/if}
{/template}
